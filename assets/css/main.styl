@import "lib/normalize.css"
@import "lib/variables"
@import "lib/mixins"

@import "../lib/mixins"
@import "../lib/variables"

body
   background-image: url(../images/background.jpg)
   background-size: 100px 100px
   color: #000

.header
   background-color: rgba(125,125,125,.14)
   padding: 34px 0 15px
   .logo
      background: url(../images/logo.png)
      background-size: 190px 33px
      width: 190px
      height: 33px
      margin: 0 auto

.content
   padding: 15px 
   box-shadow: 0 1px rgba(100,100,100,.5), 0 -1px rgba(100,100,100,.5), inset 0 1px 1px rgba(255,255,255,.6), inset 0 -1px 1px rgba(255,255,255,.6)

.highlight
   margin: 0 auto
   max-width: 430px
   .meta-wrap
      .image-wrap
         float: left
         position: relative
         margin: 0
         display:block
         width: 43px
         height: 43px
         border-radius: 5px
         overflow:visible
         .profile-image
            width: 43px
            height: 43px
            border-radius: 5px
         .cover
            position: absolute
            top: 0
            left: 0
            width: 43px
            height: 43px
            border-radius: 5px
            box-shadow: inset 1px 2px 3px rgba(0,0,0,0.6), 0 1px 2px rgba(255, 255, 255, 0.8), 0 -1px 1px rgba(0, 0, 0, 0.8)
         .verified-icon
            position: absolute
            right: -13px
            bottom: -8px

      .owner
         margin: 0 0 0 55px
         font-weight: bold
         font-size: 14px
         padding: 6px 0 0
         text-shadow: 0 1px 0 #fff
      .team
         margin: 4px 0 0 55px
         color: #c1272d
         font-weight: lighter
         font-size: 10px
         text-shadow: 0 1px 0 #fff

   .image-border
      margin-top: 16px
      padding: 8px
      box-shadow: 1px 1px 4px rgba(0,0,0,.3), -1px 1px 4px rgba(0,0,0,.3)
      background: #fff

      .image-container
         padding-bottom: 8px
         img
            display: block
            width: 100%
            min-height: 100px

      .caption
         font-weight: bold
         color: #2f3e46
         text-shadow: 0 1px 0 #ffffff
      .date
         color: #c1272d
         font-size: 11px
         font-weight: lighter
         padding-top: 3px

.footer
   background-color: rgba(125,125,125,.14)
   padding-top: 20px
   .download-button
      display: block
      margin: 0 auto 
      background: url(../images/download-button.png)
      background-size: 612px 44px
      width: 304px
      height: 44px
      &:active 
         background-position: -309px 0
   .copyright
      font-size: 9px 
      color: #909090
      text-shadow: 0 1px 0 #fff
      text-align: center
      margin-top: 12px
      padding-bottom: 8px

@media only screen and (-webkit-min-device-pixel-ratio: 1.5)
   body
      background-image: url(../images/background@2x.jpg) !important
   .logo
      background-image: url(../images/logo@2x.png) !important
   .download-button
      background-image: url(../images/download-button@2x.png) !important